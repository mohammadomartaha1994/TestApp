<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_100dp"
    android:background="@drawable/background_blue">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_calendar"
        android:id="@+id/ivIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        app:tint="@color/color_403572"
        app:layout_constraintVertical_bias="0.21" />

    <TextView
        android:text="@string/how_was_your_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitle"
        android:textColor="@color/color_403572"
        android:textSize="@dimen/size_16sp"
        app:layout_constraintStart_toEndOf="@+id/ivIcon"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:text="@string/how_was_your_day_body"
        android:layout_width="@dimen/size_270dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/size_24dp"
        android:id="@+id/tvBody"
        android:textSize="@dimen/size_12sp"
        android:textColor="@color/color_403572"
        app:layout_constraintStart_toEndOf="@+id/ivIcon"
        android:layout_marginStart="@dimen/size_4dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintVertical_bias="0.209"
        app:layout_constraintEnd_toStartOf="@+id/ivAction"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="24dp"
        app:tint="@color/color_403572"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/ivAction" />

</androidx.constraintlayout.widget.ConstraintLayout>